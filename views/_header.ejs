<header >
    <div>
        <h1 class="header">ConnectWithFriends</h1>
    </div>

    <div>
        <% if(locals.user) { %>
            <li>
                <a href="/users/profile/<%=user.id%>">
                    <%= user.name %>
                </a>
            </li>
            <li>
                <a href="/users/sign-out">Sign out</a>
            </li>
    </div>
        <div>
            <% if(locals.user) { %>
                <form action="/posts/create" method="POST">
                    <textarea name="content" cols="30" rows="3" placeholder="type here...." required></textarea>
                    <input type="submit" value="Post">
                </form>
            <%}%>
        </div>
        <% } else { %>
        <div id="container">
            <div id="left-side">
                <div>
                    <h1 style="font-size: 50px;">ConnectWithFriends</h1>
                </div>
                <div>
                    <h2 style="color: black;">ConnectWithFriends helps you connect and share with the people in your life.</h2>
                </div>
                
            </div>
            <div id="right-side">
                <!-- Your login form here -->
                <div id="signin-form">
                <form action="/users/create-session" method="POST">
                    <input type="text" name="email" id="email" placeholder="Your Email" required>
                    <input type="password" name="password" id="password" placeholder="Your Password" required>
                    <input type="submit" value="Sign in" style="color: white; background-color: #007BFF;">
                </form>
                <hr>
                <div style="text-align: center;">
                    <p>Page for <b>College Student Friend</b></p>
                </div>
                </div>

                <div id="signup-form" style="display:none;">
                <!-- Your signup form here -->
                <form action="/users/create" method="POST" style="background-color: #fff; border-radius: 8px; padding: 20px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); text-align: left;">
                    <h1 style="color: #007BFF;">Sign Up</h1>
                    <input type="text" name="name" placeholder="Your Name" required style="margin-bottom: 10px; padding: 8px; border: 1px solid #ccc; border-radius: 4px; width: calc(100% - 16px); box-sizing: border-box;">
                    <br>
                    <input type="email" name="email" placeholder="Your Email" required style="margin-bottom: 10px; padding: 8px; border: 1px solid #ccc; border-radius: 4px; width: calc(100% - 16px); box-sizing: border-box;">
                    <br>
                    <input type="password" name="password" placeholder="Password" required style="margin-bottom: 10px; padding: 8px; border: 1px solid #ccc; border-radius: 4px; width: calc(100% - 16px); box-sizing: border-box;">
                    <br>
                    <input type="password" name="confirm_password" placeholder="Confirm Password" required style="margin-bottom: 10px; padding: 8px; border: 1px solid #ccc; border-radius: 4px; width: calc(100% - 16px); box-sizing: border-box;">
                    <input type="submit" value="Sign Up" style="background-color: #4caf50; color: #fff; cursor: pointer;">
                </form>
                </div>

                <!-- Link to toggle between sign-in and sign-up -->
                <div id="tbc" style="background-color: #4caf50; border-radius: 10px; padding: 15px; margin-top: 5%;">
                    <a href="#" id="toggle-link" style="color: white;">Create New Account</a>
                </div>
                
            </div>
        </div>

            <script>
                // JavaScript to toggle between sign-in and sign-up
                const signInForm = document.getElementById('signin-form');
                const signUpForm = document.getElementById('signup-form');
                const toggleLink = document.getElementById('toggle-link');
                const rightSideContainer = document.getElementById('tbc');

                toggleLink.addEventListener('click', function () {
                    if (signInForm.style.display === 'block') {
                        signInForm.style.display = 'none';
                        signUpForm.style.display = 'block';
                        rightSideContainer.style.backgroundColor = '#007BFF'
                        toggleLink.innerText = 'Sign In';
                    } else {
                        signInForm.style.display = 'block';
                        signUpForm.style.display = 'none';
                        rightSideContainer.style.backgroundColor = '#4caf50';
                        toggleLink.innerText = 'Create New Account';
                    }
                });
            </script>
        <% } %>
</header>